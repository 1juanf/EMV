
<link rel="stylesheet" href="/css/popup.css">
<link rel="stylesheet" href="/css/questions.css">
<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Tabla</h1>
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Usuarios {{rep.length}}</h6>
      <button id="btn-abrir-popup" class="btn btn-primary" style='margin: 10px 0 -15px 20px; width:100px; height:40px'>ingresar</button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Tipo de documento</th>
              <th>Documento</th>
              <th>Cargo</th>
              <th>Nombre</th>
              <th>Edad</th>
              <th>Sexo</th>
              <th>Eliminar</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Tipo de documento</th>
              <th>Documento</th>
              <th>Cargo</th>
              <th>Nombre</th>
              <th>Edad</th>
              <th>Sexo</th>
              <th>Eliminar</th>
            </tr>
          </tfoot>
          <tbody>
            {{#each rep }}
            <tr>
                <th>{{ type_d }}</th>
                <td>{{ idcc }}</td>
                <td>{{ cargo }}</td>
                <td>{{ namep }}</td>
                <th>{{ age }}</th>
                <th>{{ sex }}</th>
                <th>  <form action="/person/delete/{{idcc}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                      <button class="btn far fa-trash-alt" type="submit"></button>
                  </form>
                </th>
              </tr>
              {{else}}
            {{/each}}

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="overlay" id="overlay">
  <div class="popup" id="popup">
    <a href="#" id="btn-cerrar-popup" class="btn-cerrar-popup"><i class="fas fa-times"></i></a>
    <h4>INGRESAR</h4>
    <h5>Nuevo usuario</h5>
    <div class="container-fluid">
      <div class="wrap">
        <form class="formulario" action="/person/new-person" method="POST">
          <div class="contenedor-inputs">
            <input type="text" name="namep" id="namep" placeholder="Nombre" style="width: 100%; text-align: center;">
            <div class="input-group">
              <div class="form-group input-group-prepend" style="width : 100px" >
                <select class="form-control" name="type" id="type">
                  <option>CC.</option>
                  <option>Pasaporte</option>
                  <option>CC. extrangería</option>
                </select>
              </div>
              <input class="form-control" name="id_c" type="text" placeholder="Documento" style="padding-left: 45px; padding-top: 10px; padding-bottom: 10px;">
            </div>
            <!-- <input type="text" name="tell" placeholder="Teléfono" style="width: 100%; text-align: center;"> -->
            <!-- <div class="input-group date"> -->
              <input type="text" name="edad" placeholder="Edad" style="width: 100%; text-align: center;">
            <!-- </div> -->
            <!-- <input type="text" name="old" placeholder="Edad" style="width: 30%; text-align: center;"> -->
            <div class="radio">
              <input type="radio" name="sex" id="M" value="m">
              <label for="M">Masculino</label>
              <input type="radio" name="sex" id="F" value="f">
              <label for="F">Femenino</label>
            </div>
            <div class="radio">
              <h5>Cargo</h5>
                 <input type="radio" name="symp" id="symp0" value="Medico">
                <label for="symp0">Medico</label>

                <input type="radio" name="symp" id="symp1" value="Enfermero">
                <label for="symp1">Enfermero</label>

                <input type="radio" name="symp" id="symp2" value="Conductor">
                <label for="symp2">Conductor</label>

            </div>
          </div>
          <input type="submit" class="btn-submit" value="Guardar">
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/popup.js"></script>
